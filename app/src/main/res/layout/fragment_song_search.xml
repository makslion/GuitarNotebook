<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SongSearch">

    <Button
        android:id="@+id/byNameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:onClick="byNamePressed"
        tools:ignore="OnClick"
        android:text="By name" />

    <Button
        android:id="@+id/byGenreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="byGenrePressed"
        tools:ignore="OnClick"
        android:text="By genre" />

    <Button
        android:id="@+id/byArtistButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:onClick="byArtistPressed"
        tools:ignore="OnClick"
        android:text="By artist" />
</LinearLayout>