<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SongSearch">

    <android.support.v7.widget.CardView
        android:id="@+id/byNameCard"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/byNameImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/byname" />

            <TextView
                android:id="@+id/songSearchByName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@id/byNameImage"
                android:layout_alignTop="@id/byNameImage"
                android:background="#4D000000"
                android:gravity="center|start"
                android:paddingStart="20dp"
                android:text="By Name"
                android:textColor="#FFFFFF"
                android:textSize="50sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/byGenreCard"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/byGenreImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bygenre" />

            <TextView
                android:id="@+id/songSearchByGenre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@id/byGenreImage"
                android:layout_alignTop="@id/byGenreImage"
                android:background="#4D000000"
                android:gravity="center|start"
                android:paddingStart="20dp"
                android:text="By Genre"
                android:textColor="#FFFFFF"
                android:textSize="50sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/byArtistCard"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/byArtistImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/byartist" />

            <TextView
                android:id="@+id/songSearchByArtist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@id/byArtistImage"
                android:layout_alignTop="@id/byArtistImage"
                android:background="#4D000000"
                android:gravity="center|start"
                android:paddingStart="20dp"
                android:text="By Artist"
                android:textColor="#FFFFFF"
                android:textSize="50sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>