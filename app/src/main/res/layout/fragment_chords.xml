<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Chords">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/aChordsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="A"
            android:textSize="30sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/aChordsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            tools:listitem="@layout/chord_listitem">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/bChordsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="B"
            android:textSize="30sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/bChordsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            tools:listitem="@layout/chord_listitem" />

        <TextView
            android:id="@+id/cChordsLabel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="C"
            android:textSize="30sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cChordsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            tools:listitem="@layout/chord_listitem" />

        <TextView
            android:id="@+id/dChordsLabel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="D"
            android:textSize="30sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dChordsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            tools:listitem="@layout/chord_listitem" />

        <TextView
            android:id="@+id/eChordsLabel4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="E"
            android:textSize="30sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/eChordsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            tools:listitem="@layout/chord_listitem" />

        <TextView
            android:id="@+id/fChordsLabel5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="F"
            android:textSize="30sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fChordsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            tools:listitem="@layout/chord_listitem" />

        <TextView
            android:id="@+id/gChordsLabel6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="G"
            android:textSize="30sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/gChordsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            tools:listitem="@layout/chord_listitem" />

    </LinearLayout>

</ScrollView>