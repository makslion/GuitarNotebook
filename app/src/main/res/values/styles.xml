    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/scheme1Night</item>
        <item name="colorPrimaryDark">@color/scheme1Night</item>
        <item name="colorAccent">@color/scheme1Red</item>
        <item name="android:colorBackground">@color/scheme1Bone</item>
        <item name="android:textColor">@color/scheme1Night</item>
        <item name="colorButtonNormal">@color/scheme1Night</item>
        <item name="actionMenuTextColor">@color/scheme1Night</item>
    </style>

    <style name="AppThemeLight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>




    <style name="AppThemeDark" parent="ThemeOverlay.AppCompat.Dark">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/scheme2Light</item>
        <item name="colorPrimaryDark">@color/scheme2Light</item>
        <item name="colorAccent">@color/scheme2Green</item>
        <item name="android:colorBackground">@color/scheme2Dark</item>
    </style>

    <style name="AppThemeDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

